        {
          "allOf": [
            {
              "$ref": "#/types/AnyPermissions"
            },
            {
              "name": "permissions"
            }
          ]
        },
        {
          "name": "callback",
          "type": "function",
          "parameters": [
            {
              "name": "result",
              "type": "boolean"
