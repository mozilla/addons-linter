        {
          "name": "callback",
          "type": "function",
          "parameters": [
            {
              "allOf": [
                {
                  "$ref": "#/types/AnyPermissions"
                },
                {
                  "name": "permissions"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "name": "contains",
      "type": "function",
      "async": "callback",
