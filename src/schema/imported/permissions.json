          ]
        }
      ]
    },
    {
      "name": "request",
      "type": "function",
      "allowedContexts": [
        "content"
      ],
      "async": "callback",
      "requireUserInput": true,
      "description": "Request the given permissions.",
      "parameters": [
        {
          "allOf": [
            {
              "$ref": "#/types/Permissions"
            },
            {
              "name": "permissions"
            }
          ]
        },
        {
          "name": "callback",
          "type": "function",
          "parameters": [
            {
              "name": "granted",
              "type": "boolean"
            }
          ]
        }
      ]
    },
    {
      "name": "remove",
      "type": "function",
      "async": "callback",
      "description": "Relinquish the given permissions.",
      "parameters": [
        {
          "allOf": [
            {
              "$ref": "#/types/Permissions"
            },
            {
              "name": "permissions"
            }
          ]
        },
        {
          "name": "callback",
          "type": "function",
          "parameters": []
        }
      ]
    }
  ],
  "events": [
    {
      "name": "onAdded",
      "type": "function",
